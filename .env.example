# ============================================
# ClassGuru Ad Service Configuration
# ============================================

# Server Configuration
PORT=8791
NODE_ENV=development

# JWT Authentication (MUST match mainline config)
# Generate: openssl rand -base64 48
JWT_SECRET=your_shared_jwt_secret_at_least_32_characters_long

# Database
DB_PATH=./data/ad_service.db

# Google Ads Configuration
# Get credentials from: https://console.cloud.google.com/
GOOGLE_ADS_ENABLED=true
GOOGLE_APPLICATION_CREDENTIALS=./credentials/google-ads-credentials.json

# AdSense Configuration (Optional)
ADSENSE_CLIENT_ID=ca-pub-xxxxxxxxxxxxxxxxx
ADSENSE_SLOT_ID=xxxxxxxxxx

# AdMob Configuration (Optional for mobile)
ADMOB_APP_ID=ca-app-pub-xxxxxxxxxxxxxxxx~yyyyyyyyyy
ADMOB_BANNER_UNIT_ID=ca-app-pub-xxxxxxxxxxxxxxxx/zzzzzzzzzz

# Ad Display Settings
ADS_PER_PAGE=3
AD_REFRESH_INTERVAL=30000
MIN_AD_DISPLAY_TIME=5000

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIMEWINDOW=60000

# CORS Settings
CORS_ORIGIN=http://localhost:3000,http://localhost:8790

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# Mock Mode (for testing without Google Ads setup)
MOCK_ADS_MODE=false
MOCK_ADS_SCENARIO=success
