  "description": "ClassGuru Ad Service - Google Ads integration microservice",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "validate": "node scripts/validate-env.js",
    "generate-jwt": "node scripts/generate-test-jwt.js",
    "kill-server": "node scripts/kill-server.js",
    "test": "echo 'Test suite coming soon'",
    "lint": "eslint src --ext .ts",
